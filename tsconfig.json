{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"declaration": true,
		"declarationDir": "dist",
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["es2020", "dom"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.stories.tsx",
		"src/**/*.spec.tsx"
	]
}
